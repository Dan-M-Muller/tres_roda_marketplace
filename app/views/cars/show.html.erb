<div class="card mt-2">
  <% if @car.photo.attached? %>
    <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill, class: "card-banner card-img-top" %>
  <% else %>
    <%= image_tag "car_placeholder.jpg" %>
  <% end %>
  <div class="card-body">
    <h3 class="card-title text-center"><%= @car.model %>, <%= @car.brand %></h3>
    <p class="card-text">User: <%= @car.user.first_name %> <%= @car.user.last_name %></p>
    <p class="card-text">Kilometragem: <%= @car.km %></p>
    <p class="card-text">Ano: <%= @car.year %></p>
  </div>
</div>
