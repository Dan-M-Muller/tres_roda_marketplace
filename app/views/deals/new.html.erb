<h1 class="bg-dark bg-gradient text-white text-center p-2"> Confirmação de preço para <%= @car.brand %> <%= @car.model %>, <%= @car.year %></h1>
<div class="container mt-2">
  <h3> Converse com <%= @car.user.first_name %>, para chegarem a um acordo</h3>
</div>
<hr>
<div class="container m-3">
  <div class="card">
    <div class="card-header text-center">
      <%= @buyer.first_name %> <%= @buyer.last_name %>
    </div>
    <div class="card-body">
      <%= render "buyer_form", deal: @deal %>
    </div>
  </div>
  <%= link_to "Voltar", car_path(@car), class: "btn btn-dark mt-3" %>
</div>
